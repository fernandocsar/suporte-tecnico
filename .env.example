# Configurações do Sistema de Suporte Técnico
# Copie este arquivo para .env e ajuste as configurações conforme necessário

# Configurações de rede
NETWORK_TIMEOUT=30
PING_TIMEOUT=5
GPUPDATE_TIMEOUT=300

# Configurações de interface
MENU_WIDTH=60
AUTO_RETURN_DELAY=3
USE_EMOJIS=true
CLEAR_SCREEN=false

# Configurações de sistema
MIN_DISK_SPACE_GB=5
MAX_CPU_PERCENT=80
MAX_MEMORY_PERCENT=80

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=suporte_tecnico.log
MAX_LOG_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Configurações de desenvolvimento
DEBUG=false
VERBOSE=false